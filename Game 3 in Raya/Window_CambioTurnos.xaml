<Window x:Class="Game_3_in_Raya.Window_CambioTurnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_3_in_Raya"
        mc:Ignorable="d"
        Title="Cambio Turnos" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <TextBlock Text="¿Quien jugara primero?" HorizontalAlignment="Center"/>
            <Button Width="80" x:Name="B1" Margin="10" Content="Jugador 1" HorizontalAlignment="Left" Click="B1_Click"/>
            <Button Width="80" x:Name="B2" Margin="10" Content="Jugador 2" HorizontalAlignment="Left" Click="B2_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
